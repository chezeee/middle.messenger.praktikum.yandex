<div class='form-input-wrap'>
  <label class='form-input-wrap__label' for={{id}}>{{label}}</label>
  <input
    required
    class='form-input-wrap__input'
    type={{type}}
    id={{id}}
    name={{name}}
    placeholder='Введите {{placeholder}}...'
    pattern={{pattern}}
    value={{value}}
  />
</div>
